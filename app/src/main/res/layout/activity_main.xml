<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:id="@+id/decals_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000000"
            android:layout_weight="1">

        <com.lzp.decals.DecalsEditWrapper
                android:layout_width="200dp"
                app:borderWidth="5dp"
                app:borderColor="@color/colorAccent"
                app:btnSize="80dp"
                app:deleteDrawable="@drawable/icon_shanchu"
                app:rotateDrawable="@drawable/icon_shanchu"
                app:scaleDrawable="@drawable/icon_shanchu"
                android:layout_height="200dp"/>

    </FrameLayout>

    <Button
            android:id="@+id/add_decals"
            android:text="添加贴纸"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>